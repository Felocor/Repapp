<%= simple_form_for(@republica) do |f| %>
  <%= f.input :name, label: "Nome da Republica", placeholder: "Republica do Wagon" %>
  <%= f.input :address, label: "Rua", placeholder: "Rua Lisboa 890" %>
  <%= f.input :zip_code, label: "CEP", placeholder: "05413-000" %>
  <%= f.input :city, label: "Cidade", placeholder: "São Paulo" %>
  <%= f.input :country, label: "Pais", placeholder: "Brasil", as: :text %>
  <%= f.input :description, label: "Descrição", placeholder: "Descrição"%>
  <%= f.input :vacancies, label: "Vagas", placeholder: "1" %>
  <%= f.input :photos, as: :attachinary %>
  <%= f.button :submit, class: "btn btn-green btn-block"  %>
<% end %>
