<h1>Booking's List</h1>
<div class='container'>
  <table>
    <thead>
      <tr>
        <th>Email: </th>
        <th><%= @user.email%></th>
        <th colspan="3"></th>
      </tr>
    </thead>
    <br>

    <tbody>
      <% @bookings.each do |booking| %>
        <tr>
          <td><%= booking.republica.name %> - </td>
          <td><%= booking.republica.address %> - </td>
          <td><%= booking.check_in %> - </td>
          <td><%= booking.check_out %> - </td>
          <td><%= booking.status %> - </td>
          <td><%= link_to 'Edit', edit_republica_booking_path(booking) %> | </td>
          <td><%= link_to 'Cancel', edit_republica_booking_path(booking) %> | </td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>

<br>

<%= link_to 'Back', root_path %> |


