<div class='container'>
  <h1><strong>Republic's Booking List</strong></h1>
  <h2> Vacancies: <%= @republica.vacancies %></h2>

  <% if @bookings %>
    <div class="republica-container">
      <% @bookings.each do |booking| %>
        <div class="republica-line">
          <div class="republica-image">
            <%= cl_image_tag avatar_image(current_user), width: 100, height: 100, crop: :fill, class: "  dropdown-toggle", id: "navbar-wagon-menu", "data-toggle" => "dropdown" %>
          </div>
          <div class="republica-content text-center">
            <strong><%= booking.user.first_name %>  <%= booking.user.last_name %></strong> <br>
            Check-in: <%= booking.check_in %><br>
            Check-out: <%= booking.check_out %><br>
            Status: <%= booking.status %><br>
          </div>

          <div class="republica-actions text-center">
            <% if booking.status == "P" %>
              <%= link_to 'Confirm', confirm_republica_booking_path(booking.republica, booking), class: "btn btn-green" %>
              <%= link_to 'Reject', reject_republica_booking_path(booking.republica, booking), class: "btn btn-default" %>
            <% end %>
          </div>
        </div>
      <% end %>
    </div>
  <% end %>
  <br>

  <%= link_to 'Back', root_path %> |
</div>

