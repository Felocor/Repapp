<h1>Booking's List</h1>
<div class='container'>
  <table>
    <thead>
      <tr>
        <th>Email: </th>
        <th><%= @user.email%></th>
        <th colspan="3"></th>
      </tr>
    </thead>
    <br>

    <tbody>
      <% @bookings.each do |booking| %>
        <tr>
          <td style="width:300px"><%= booking.republica.name %></td>
          <td style="width:300px"><%= booking.republica.address %></td>
          <td style="width:100px"><%= booking.check_in %></td>
          <td style="width:100px"><%= booking.check_out %></td>
          <td style="width:100px"><%= booking.status %></td>
          <td style="width:100px"><%= link_to 'Edit', edit_republica_booking_path(booking) %></td>
          <td style="width:100px"><%= link_to 'Cancel', edit_republica_booking_path(booking) %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>

<br>

<%= link_to 'Back', root_path %> |


