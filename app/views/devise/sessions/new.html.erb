<div class="box-large-white">
  <h2 class="text-center">Conexão</h2>

  <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
    <div class="form-inputs">
      <%= f.input :email, required: false, autofocus: true %>
      <%= f.input :password, label: "Senha", required: false %>
      <%= f.input :remember_me, label: "Se lembrar", as: :boolean if devise_mapping.rememberable? %>
    </div>

    <div class="form-actions">
      <%= f.button :submit, "Conexão", class: 'btn-block btn-margin btn-green' %>
    </div>
  <% end %>

  <%= render "devise/shared/links" %>
</div>
