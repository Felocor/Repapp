<div class="box-large-white">
  <h2 class="text-center">Cadastro</h2>
  <%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
    <%= f.error_notification %>

    <div class="form-inputs">
      <%= f.input :email, required: true, autofocus: true %>
      <%= f.input :password, label: "Senha", required: true, hint: ("#{@minimum_password_length} letras ao minimo" if @minimum_password_length) %>
      <%= f.input :password_confirmation, label: "ConfirmaÃ§Ã£o da senha", required: true %>
      <%= f.input :first_name, label: "Nome" %>
      <%= f.input :last_name, label: "Sobrenome" %>
      <%= f.input :dob, label: "Data de nascimento" %>
      <%= f.input :bio, label: "Biographia" %>
      <%= f.input :interests, label: "Hobbies" %>
    </div>

    <div class="form-actions">
      <%= f.button :submit, "Cadastrar", class: "btn-block btn-margin btn-green"   %>
    </div>
  <% end %>

  <%= render "devise/shared/links" %>
</div>
